<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AssemblyName>Andromeda.AvaloniaApp.FSharp</AssemblyName>
    <RootNamespace>Andromeda.AvaloniaApp.FSharp</RootNamespace>
    <ServerGarbageCollection>true</ServerGarbageCollection>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia.Desktop" Version="0.8.*" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.8.*" />
    <PackageReference Include="DynamicData" Version="6.9.*" />
    <PackageReference Include="DynamicData.ReactiveUI" Version="6.9.*" />
    <PackageReference Include="ReactiveUI" Version="9.13.*" />
    <PackageReference Include="System.Reactive.Core" Version="4.1.*" />
    <PackageReference Include="System.Reactive.Interfaces" Version="4.1.*" />
    <PackageReference Include="System.Reactive.Linq" Version="4.1.*" />
    <PackageReference Include="VitalElement.CefGlue.Core" Version="0.9.0-build32-alpha" />
    <PackageReference Include="VitalElement.CefGlue.Core.Avalonia" Version="0.9.0-build32-alpha" />
    <!--PackageReference Include="VitalElement.CefGlue.Core.OSX" Version="0.9.0-build30-alpha" /-->
    <!--PackageReference Include="VitalElement.CefGlue.Core.Win-x64" Version="0.9.0-build30-alpha" /-->
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="../Andromeda.Core/Andromeda.Core.fsproj" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="**/*.xaml">
      <SubType>Designer</SubType>
    </EmbeddedResource>
    <EmbeddedResource Include="Assets/*" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="Helpers/AppDataWrapper.fs" />
    <Compile Include="Helpers/DownloadStatus.fs" />
    <Compile Include="Helpers/InstallationInfos.fs" />
    <Compile Include="Helpers/Logger.fs" />
    <Compile Include="Helpers/NotificationData.fs" />

    <Compile Include="Converter/FloatToStringConverter.fs" />
    <Compile Include="Converter/PathToBitmapConverter.fs" />
    <Compile Include="Converter/ProductInfoToStringConverter.fs" />

    <Compile Include="Windows/AuthenticationWindow.xaml.fs" />
    <Compile Include="Windows/InstallWindow.xaml.fs" />
    <Compile Include="Windows/MainWindow.xaml.fs" />

    <Compile Include="ViewModels/ViewModelBase.fs" />
    <Compile Include="ViewModels/AuthenticationWindowViewModel.fs" />
    <Compile Include="ViewModels/InstallWindowViewModel.fs" />
    <Compile Include="ViewModels/MainWindowViewModel.fs" />

    <Compile Include="ViewLocator.fs" />

    <Compile Include="App.xaml.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>
</Project>
