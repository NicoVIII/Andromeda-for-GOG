<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converter="clr-namespace:Andromeda.AvaloniaApp.Converter;assembly=Andromeda.AvaloniaApp"
        Title="Download game"
        Height="300" Width="600">
  <StackPanel Orientation="Vertical" Spacing="5">
    <StackPanel Orientation="Horizontal">
      <StackPanel.Resources>
        <converter:FloatToStringConverter x:Key="floatConverter"/>
      </StackPanel.Resources>
      <TextBlock>Downloading.. (</TextBlock>
      <TextBlock Text="{Binding DownloadedMB, Converter={StaticResource floatConverter}}" />
      <TextBlock> MB of </TextBlock>
      <TextBlock Text="{Binding FileMB, Converter={StaticResource floatConverter}}" />
      <TextBlock> MB)</TextBlock>
    </StackPanel>
  </StackPanel>
</Window>
